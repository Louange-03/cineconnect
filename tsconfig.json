{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node", "react"]
  },
  "references": [
    { "path": "./backend" },
    { "path": "./frontend" }
  ],
  "include": ["backend", "frontend"]
}

